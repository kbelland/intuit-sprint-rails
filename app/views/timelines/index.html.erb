				<%= image_tag("rails.png") %> <br />
				<%= link_to 'Edit', edit_timeline_path(@real) %> <br /><br />



		<% if @profile != nil %>
				<h3><%= "On the '#{@compare.name}' savings plan:" %></h3>
				<h3>
				<%= "$#{@compare.twentyyears.to_int}.00" %>	</h3><br />
				<%= image_tag("rails.png") %> <br />
				<%= link_to 'Edit', edit_timeline_path(@compare) %> <br />
		<% end %>


